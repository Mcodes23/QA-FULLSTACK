{
  "compilerOptions": {
    "target": "ESNext", // Better compatibility for Vite
    "module": "ESNext", // Ensures ES module compatibility
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
